
  <% if notice %>
    <aside id="notice"><%= notice %></aside>
  <% end %>
  <h2 class="center"><%= t('.title') %></h2>
<div class="card">
  <table>
    <%= render(cart.line_items) %>
    <tfoot style="background-color: khaki">
    <tr>
      <th colspan="2">Total:</th>
      <td class="price"><%= number_to_currency(cart.total_price) %></td>
    </tr>
    </tfoot>
  </table>
    <div style="text-align: center">
      <%= button_to t('.empty'), cart,
                    method: :delete,
                    data: { confirm: 'Are you sure?' },class:'btn btn-sm btn-danger mt-4' %>
      <hr>
      <%= button_to t('.checkout'), new_order_path(locale: I18n.locale), method: :get,
                    class:'btn btn-sm btn-primary mb-4' %>
    </div>
</div>



