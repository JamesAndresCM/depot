<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1>Products</h1>

<table class="table table-striped">
  <tfoot>
    <tr>
      <td colspan="3">
        <%= link_to 'New product', new_product_path,class: 'btn btn-primary' %>
      </td>
    </tr>
  </tfoot>
  <tbody>
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
          <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
            <td>
              <%= image_tag(product.image_url, class: 'list_image') %>
            </td>
            <td class="list_description">
              <h1><%= product.title %></h1>
              <p>
                <%= truncate(strip_tags(product.description), length: 80) %>
              </p>
            <td class="list_actions">
              <ul style="list-style-type:none;">
                <li><%= link_to 'Show', product, class: 'btn btn-sm btn-primary mb-1' %></li>
                <li><%= link_to 'Edit', edit_product_path(product) , class: 'btn btn-sm btn-success'%></li>
                <li>
                <%= link_to 'Destroy', product,method: :delete,  class: 'btn btn-sm btn-danger mt-1',
                      data: { confirm: 'Are you sure?' } %>
                </li>
              </ul>
            </td>
          </tr>
      <% end %>
    <% end %>
  <% end %>
  </tbody>
</table>


