<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h1>Users</h1>

<table class="table table-hover table-responsive">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user,class: 'btn-sm btn-info' %></td>
        <td><%= link_to 'Edit', edit_user_path(user),class: 'btn-sm btn-primary' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn-sm btn-primary' %>
